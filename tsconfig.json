{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": [
      "node"
    ],
    "paths": {
      "assets/*": [
        "./src/assets/*"
      ],
      "images/*": [
        "./src/assets/images/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "util/*": [
        "./src/util/*"
      ],
      "pages/*": [
        "./src/pages/*"
      ],
    }
    // "paths": {
    //   "images/*": [
    //     "./assets/images/*"
    //   ],
    //   "components/*": [
    //     "./components/*"
    //   ],
    //   "assets/*": [
    //     "./assets/*"
    //   ],
    //   "pages/*": [
    //     "./pages/*"
    //   ],
    //   "locale/*": [
    //     "./locale/*"
    //   ],
    //   "util/*": [
    //     "./util/*"
    //   ],
    // }
  },
  "include": [
    "src",
    // "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}